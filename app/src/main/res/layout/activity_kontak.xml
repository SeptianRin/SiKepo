<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KontakActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/rounded_rect"
        android:orientation="vertical"
        android:layout_marginTop="-80dp">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/information"
            android:layout_marginTop="90dp"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontak Resmi"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" Desa Pongangan"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/kontak"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    app:cardCornerRadius="25dp"
                    android:onClick="Telefon"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/phone"
                            android:layout_width="0dp">

                        </ImageView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:text="Telp. (024)76922081 "
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:gravity="center"/>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    app:cardCornerRadius="25dp"
                    android:onClick="Email"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/mail"
                            android:layout_width="0dp">

                        </ImageView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:text="kelurahanpongangan@gmail.com"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:gravity="center"/>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    app:cardCornerRadius="25dp"
                    android:onClick="Instagram"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/instagram"
                            android:layout_width="0dp">

                        </ImageView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:text="\@pongangansquad"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:gravity="center"/>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>